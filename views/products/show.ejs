<%- include("../partials/header")%>


    <%- include("../partials/navbar")%>



        <div class="container mt-5">

            <%- include("../partials/flash")%>
                <div id="showbox1" class="row">
                    <div class="col-lg-6">
                        <div  class="card" style="width: 30rem; height:650px;">
                            <img src="<%=product.img%>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Name: <%=product.name%>
                                </h5>
                                <h5 class="card-price">
                                    Price:$<%=product.price%>
                                </h5>
                                <p class="card-text">
                                    <%=product.desc%>
                                </p>
                                <a href="#" id="buy" class="btn btn-success">Buy</a>
                                <a href="#" id="addtocart" class="btn btn-secondary">Add to Cart</a>
                                <a href="/products/<%=product._id%>/edit" id="edit" class="btn btn-warning">Edit</a>

                                <form action="/products/<%=product._id%>?_method=DELETE" method="POST">

                                    <button id="delete" class="btn btn-danger">Delete</button>
                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <h1 id="reviewtime" style="margin: 10px;">Leave a Review</h1>
                            <form class="validated-form" action="/products/<%=product._id%>/review" method="POST"
                                style="width: 90%; margin: 10px auto" novalidate>
                                <div class="mb-3">

                                    <label for="rating" class="form-label">Rating</label>
                                    <input type="range" class="form-range" min="0" max="5" name="rating" id="rating">
                                </div>
                                <div class="mb-3">

                                    <label for="desc" class="form-label">Comment</label>
                                    <textarea id="desc" class="form-control" cols="32" rows="5" name="comment"
                                        required> </textarea>

                                </div>


                                <button type="submit" class="btn btn-success">Submit</button>


                            </form>

                            <div class="mb-3 mt-3">

                                <% for(let review of product.reviews){%>

                                    <div class="card mb-3" style="height:170px; ">
                                        <div class="card-header text-capitalize"><%=review.user%></div>
                                        <div class="card-body float-start">
                                            <h5 class="card-title">Rating:<%=review.rating%>
                                            </h5>
                                            <p class="card-text">
                                                <%=review.comment%>
                                            </p>

                                        </div>
                                    </div>

                                    <%}%>
                            </div>
                        </div>
                    </div>
                </div>

                <%- include("../partials/footer")%>